<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <title>Blog Web App</title>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4"> Blog Articles </h1>
        <a class="btn btn-success" href="/articles/new">New Article</a>
        <hr>

        <% articles.forEach(article => {  %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= article.title %></h4>
                    <div class="card-subtitle mb-2 text-muted"><%= article.dateOfCreation.toLocaleDateString() %></div>
                    <div class="card-text mb-2"><%= article.description %></div>
                    <a class="link" href="/articles/<%= article.slug %>">Read more</a>
                    <a class="btn btn-info" href="/articles/edit/<%= article.id %>">Edit</a>
                    <form action="/articles/<%= article.id %>?_method=DELETE" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">DELETE</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>